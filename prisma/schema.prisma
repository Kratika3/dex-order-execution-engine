// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  ROUTING
  BUILDING
  SUBMITTED
  CONFIRMED
  FAILED
}

model Order {
  id              String      @id @default(uuid())
  pair            String      // e.g., "SOL-USDC"
  amount          Float
  direction       String      // "BUY" or "SELL"
  status          OrderStatus @default(PENDING)
  logs            Json        @default("[]") // Array of routing decision strings
  txHash          String?     // Nullable, for the final mock transaction hash
  executionPrice  Float?      // Nullable, final execution price
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([status])
  @@index([createdAt])
}
